@model BookAway.Models.Hotel

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h2>Insert</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="mask d-flex align-items-center h-80 gradient-custom-3 mb-5 text-dark" style="top:100Px;bottom:30%;position:relative">
        <div class="container h-80 mb-5">
            <div class="row d-flex justify-content-center align-items-center h-80">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Add hotel details</h2>

                            <form>
                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.HotelName, new { htmlAttributes = new { @class = "form-control", placeholder = "Hotel Name" } })
                                    @Html.ValidationMessageFor(model => model.HotelName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="row">
                                        <div class="column" style="padding-right:10px">
                                            @Html.EditorFor(model => model.HotelAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
                                            @Html.ValidationMessageFor(model => model.HotelAddress, "", new { @class = "text-danger" })


                                        </div>
                                        <div class="column" style="padding-right:10px">
                                            @Html.EditorFor(model => model.HotelCity, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                                            @Html.ValidationMessageFor(model => model.HotelCity, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>


                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.HotelEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.HotelEmail, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.HotelContactNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact Number" } })
                                    @Html.ValidationMessageFor(model => model.HotelContactNumber, "", new { @class = "text-danger" })
                                </div>

                                @*<div class="form-outline mb-4">
                                        @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
                                    </div>*@
                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.TotalOfRooms, new { htmlAttributes = new { @class = "form-control", placeholder = "Total Number of Rooms" } })
                                    @Html.ValidationMessageFor(model => model.TotalOfRooms, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.RentPerRoom, new { htmlAttributes = new { @class = "form-control", placeholder = "Rent per room" } })
                                    @Html.ValidationMessageFor(model => model.RentPerRoom, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.HotelPic, new { htmlAttributes = new { @class = "form-control", placeholder = "Hotel Pic" } })
                                    @Html.ValidationMessageFor(model => model.HotelPic, "", new { @class = "text-danger" })
                                </div>
                                @*<div class="form-outline mb-4">
                                        @Html.EditorFor(model => model.HotelOwner, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                                        @Html.ValidationMessageFor(model => model.HotelOwner, "", new { @class = "text-danger" })
                                    </div>*@

                                @*@{
                                        int id = ViewBag.id;
                                    }

                                    @Html.HiddenFor(model => model.HotelOwner, new { value = id })*@

                                <div class="d-flex justify-content-center">
                                    <input type="submit"
                                           class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Register" />


                                </div>
                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <u>@Html.ActionLink("Login", "LoginCust")</u>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



