@model BookAway.Models.Customer

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>SignUp</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()


    <div class="mask d-flex align-items-center h-80 gradient-custom-3 mb-5 text-dark" style="top:100Px;bottom:30%;position:relative">
        <div class="container h-80 mb-5">
            <div class="row d-flex justify-content-center align-items-center h-80">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form>
                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.CustUsername, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
                                    @Html.ValidationMessageFor(model => model.CustUsername, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="row">
                                        <div class="column" style="padding-right:10px">
                                            @Html.EditorFor(model => model.CustFirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                                            @Html.ValidationMessageFor(model => model.CustFirstName, "", new { @class = "text-danger" })


                                        </div>
                                        <div class="column" style="padding-right:10px">
                                            @Html.EditorFor(model => model.CustLastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                                            @Html.ValidationMessageFor(model => model.CustLastName, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>


                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.CustEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.CustEmail, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.CustPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.CustPassword, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    @Html.EditorFor(model => model.CustContactNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                                    @Html.ValidationMessageFor(model => model.CustContactNumber, "", new { @class = "text-danger" })
                                </div>


                                <div class="d-flex justify-content-center">
                                    <input type="submit"
                                           class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Register" />


                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <u>@Html.ActionLink("Login", "LoginCust")</u>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



