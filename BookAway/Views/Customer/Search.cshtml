@model IEnumerable<BookAway.Models.Hotel>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Search Results</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HotelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalOfRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentPerRoom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelCity)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HotelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalOfRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentPerRoom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelCity)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.HotelOwner)*@
            <button type="submit" class="btn btn-primary">Book</button>
        </td>
    </tr>
}

</table>
